<h1>New Article</h1>
<!-- @article is instantiated inthe articles controller, 'new' -->

<% if @article.errors.any? %>
<%= "These are the following errors we found: " %>
	<% @article.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
<% end %>
<%= form_for @article do |f| %>
<p>
	<%= f.label :title %> <br>
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :description %> <br>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :user_id %> <br>
	<%= f.number_field :user_id %>
</p>
<p>
	<%= f.submit %>

</p>
<% end %>

<%= link_to 'Back', articles_path %>
